{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/esm",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "noEmit": false,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
